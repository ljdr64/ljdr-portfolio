---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<html lang="en" id="htmlRoot" class="scroll-smooth">
  <head>
    <script>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>LJDR-Portfolio</title>
  </head>
  <body
    class="bg-white text-black dark:bg-gray-900 dark:text-white transition-colors duration-300"
  >
    <Navbar />

    <slot />

    <Footer />
    <a
      href="#"
      id="scrollTopBtn"
      class="fixed bottom-12 right-4 w-10 h-10 items-center justify-center z-50 rounded-xl shadow-xl bg-white/80 dark:bg-black/70 backdrop-blur text-2xl transition-all hover:scale-110 cursor-pointer hidden"
      aria-label="Volver arriba"
    >
      ⬆️
    </a>

    <script is:inline>
      const scrollTopBtn = document.getElementById("scrollTopBtn");

      window.addEventListener("scroll", () => {
        if (window.scrollY > 0) {
          scrollTopBtn.classList.replace("hidden", "flex");
        } else {
          scrollTopBtn.classList.replace("flex", "hidden");
        }
      });
    </script>
    <script src="./toggle-theme.js" defer></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
